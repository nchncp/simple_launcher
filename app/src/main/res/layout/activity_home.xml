<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:orientation="vertical"
    tools:context="com.example.elderly.simplelauncher.HomeActivity"
    android:background="#374045">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/nameLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Lastname"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/avatar"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toStartOf="@+id/apps_button"/>

        <Button
            android:id="@+id/apps_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="@string/apps"
            android:onClick="showApps"
            android:textSize="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="8"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:layout_marginRight="5dp">

                <FrameLayout
                    android:id="@+id/tvShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tv" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <FrameLayout
                    android:id="@+id/messagesShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/messages"
                    android:onClick="showMessages"
                    android:layout_marginRight="5dp" />

                <FrameLayout
                    android:id="@+id/galleryShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gallery"
                    android:onClick="showMessages"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <FrameLayout
                android:id="@+id/contactShortcut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/contacts"
                android:layout_marginRight="5dp"
                android:onClick="popupWindow"/>

            <FrameLayout
                android:id="@+id/calendarShortcut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calender"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <FrameLayout
                android:id="@+id/notiShortcut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/notifications"
                android:onClick="showCalendar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <FrameLayout
                android:id="@+id/settingsShortcut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/settings"
                android:onClick="showSettings"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
